<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/xk2"
    tools:context="com.yilos.nailstar.aboutme.favourite.view.MyFavouriteActivity">

    <com.yilos.widget.titlebar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleBar" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myFavouriteList"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_10_dp"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/noFavouritePanel">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_10_dp"
            android:layout_weight="5"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@mipmap/ic_no_favourite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收藏空空的"
            android:textColor="@color/z2"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="把自己想学的教程放进来吧"
            android:textColor="@color/z3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_10_dp"
            android:layout_weight="20"/>
    </LinearLayout>

</LinearLayout>
