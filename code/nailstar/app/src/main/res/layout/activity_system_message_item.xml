<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/system_message_item"
    android:background="@color/white"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp">

        <com.yilos.widget.circleimageview.CircleImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/common_10_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/z2"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"/>
            </LinearLayout>
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textSize="@dimen/middle_text_size"
                android:textColor="@color/z2"
                android:lineSpacingExtra="9dp"/>
            <TextView
                android:textColor="@color/z3"
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/middle_text_size"
                android:lineSpacingExtra="9dp"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/about_me_list_item_img"
            android:layout_height="@dimen/about_me_list_item_img"
            android:src="@mipmap/ic_right_button"
            android:layout_marginRight="@dimen/about_me_border_padding"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1_dp"
        android:background="@color/xk2" />
</LinearLayout>