<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/bottom_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="@color/z2"
        android:id="@+id/lessionRankingNo" />

    <com.yilos.widget.view.ImageCacheView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_default_photo"
        android:id="@+id/lessionRankingImg" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.yilos.widget.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_default_photo"
                android:id="@+id/lessionAuthorPhoto"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/z2"
                android:id="@+id/lessionAuthorName" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:textColor="@color/z2"
                android:text="@string/vote_count" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lessionVoteCount"
                android:textColor="@color/z2"
                android:text="0"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/vote_black"
                    android:id="@+id/lessionVotePic" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vote"
                    android:textColor="@color/z3"
                    android:layout_marginRight="5dp"
                    android:id="@+id/lessionVote"  />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/canvass"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:background="@drawable/orange_button"
                    android:id="@+id/lessionCanvass" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>