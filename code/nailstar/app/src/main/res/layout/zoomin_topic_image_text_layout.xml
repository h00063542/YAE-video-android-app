<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".topic.view.TopicVideoPlayerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_zoomIn_topic_image_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vp_zoomIn_topic_image_text"
        android:layout_marginBottom="@dimen/zoomIn_layout_margin_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zoomIn_topic_image_text_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="1/10"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_zoomIn_topic_image_text_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="保存图片"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>