<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="195dp" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
        android:src="@mipmap/order_finish"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:textSize="15sp"
        android:textColor="@color/z1"
        android:id="@+id/order_finish_headertext"
        android:text="@string/order_finish_headertext"
        android:gravity="center"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:textSize="12sp"
        android:textColor="@color/z2"
        android:id="@+id/order_finish_text"
        android:text="@string/order_finish_text"
        android:gravity="center"/>

</LinearLayout>
