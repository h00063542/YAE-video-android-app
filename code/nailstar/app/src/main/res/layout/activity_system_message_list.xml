<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yilos.nailstar.index.view.CustomRecyclerView
        android:id="@+id/system_message_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.yilos.nailstar.index.view.CustomRecyclerView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/system_message_list_empty"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/message_empty"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_empty"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/z2"
            android:layout_marginTop="@dimen/common_10_dp"/>
    </LinearLayout>
</LinearLayout>