    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1_dp"
        android:background="@color/xk2"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_horizontal_bar_height"
        android:gravity="center">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_us"
            android:textColor="@color/z2"
            android:textSize="@dimen/my_text_size"
            android:layout_marginLeft="@dimen/my_margin_or_padding_border_width"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/about_me_list_item_img"
            android:layout_height="@dimen/about_me_list_item_img"
            android:src="@mipmap/ic_right_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/about_me_border_padding"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1_dp"
        android:background="@color/xk2"/>
    <TextView
        android:layout_marginTop="@dimen/my_horizontal_bar_space_height"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_horizontal_bar_height"
        android:gravity="center"
        android:textColor="@color/orange"
        android:text="@string/quick_login"
        android:textSize="@dimen/my_text_size"/>
</LinearLayout>