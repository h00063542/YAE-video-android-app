<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xk2">

    <com.yilos.widget.titlebar.TitleBar
        android:id="@+id/setting_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yilos.widget.titlebar.TitleBar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1_dp"
        android:background="@color/xk2"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="@color/z2"
            android:textSize="30px"
            android:layout_marginLeft="20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78.9M"
            android:textColor="@color/z3"
            android:textSize="30px"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:textSize="24px"
        android:textColor="@color/z3"
        android:text="清除不必要的缓存，为系统节省空间"
        android:gravity="center_vertical"
        android:paddingLeft="20px"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许非WiFi环境下观看和下载视频"
            android:textColor="@color/z2"
            android:textSize="30px"
            android:layout_marginLeft="20px"/>

        <LinearLayout
            android:layout_width="86px"
            android:layout_height="46px"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true">
            <com.leaking.slideswitch.SlideSwitch
                android:id="@+id/swit"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                slideswitch:isOpen="false"
                slideswitch:shape="circle"
                slideswitch:themeColor="@color/slide_switch" >
            </com.leaking.slideswitch.SlideSwitch>
        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:textSize="24px"
        android:textColor="@color/z3"
        android:text="非WiFi环境可能产生流量费用"
        android:gravity="center_vertical"
        android:paddingLeft="20px"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本信息"
            android:textColor="@color/z2"
            android:textSize="30px"
            android:layout_marginLeft="20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2.5"
            android:textColor="@color/z3"
            android:textSize="30px"
            android:layout_marginRight="50px"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xk2"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要打分"
            android:textColor="@color/z2"
            android:textSize="30px"
            android:layout_marginLeft="20px"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/about_me_list_item_img"
            android:layout_height="@dimen/about_me_list_item_img"
            android:src="@mipmap/ic_right_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/about_me_border_padding"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xk2"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于美甲大咖"
            android:textColor="@color/z2"
            android:textSize="30px"
            android:layout_marginLeft="20px"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/about_me_list_item_img"
            android:layout_height="@dimen/about_me_list_item_img"
            android:src="@mipmap/ic_right_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/about_me_border_padding"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xk2"/>
    <TextView
        android:layout_marginTop="18px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:textColor="@color/orange"
        android:text="退出登录"
        android:textSize="30px"/>
</LinearLayout>