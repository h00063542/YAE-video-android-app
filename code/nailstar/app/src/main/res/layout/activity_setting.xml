<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xk2">

    <com.yilos.widget.titlebar.TitleBar
        android:id="@+id/setting_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yilos.widget.titlebar.TitleBar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1_dp"
        android:background="@color/xk2"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_horizontal_bar_height"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_cache"
            android:textColor="@color/z2"
            android:textSize="@dimen/my_text_size"
            android:layout_marginLeft="@dimen/my_margin_or_padding_border_width"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cache_number"
            android:textColor="@color/z3"
            android:textSize="@dimen/my_text_size"
            android:layout_marginRight="@dimen/my_margin_or_padding_border_width"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_middle_horizontal_bar_height"
        android:textSize="@dimen/my_middle_text_size"
        android:textColor="@color/z3"
        android:text="@string/clear_cache_tip"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/my_margin_or_padding_border_width"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_horizontal_bar_height"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allow_wifi_watch"
            android:textColor="@color/z2"
            android:textSize="@dimen/my_text_size"
            android:layout_marginLeft="@dimen/my_margin_or_padding_border_width"/>

        <LinearLayout
            android:layout_width="@dimen/my_slide_switch_width"
            android:layout_height="@dimen/my_slide_switch_height"
            android:layout_marginRight="@dimen/my_margin_or_padding_border_width"
            android:layout_alignParentRight="true">
            <com.leaking.slideswitch.SlideSwitch
                android:id="@+id/swit"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                slideswitch:isOpen="false"
                slideswitch:shape="circle"
                slideswitch:themeColor="@color/slide_switch" >
            </com.leaking.slideswitch.SlideSwitch>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_middle_horizontal_bar_height"
        android:textSize="@dimen/my_middle_text_size"
        android:textColor="@color/z3"
        android:text="@string/allow_wifi_watch_tip"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/my_margin_or_padding_border_width"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_horizontal_bar_height"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_info"
            android:textColor="@color/z2"
            android:textSize="@dimen/my_text_size"
            android:layout_marginLeft="@dimen/my_margin_or_padding_border_width"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_info_number"
            android:textColor="@color/z3"
            android:textSize="@dimen/my_text_size"
            android:layout_marginRight="@dimen/my_version_number_margin_border_width"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1_dp"
        android:background="@color/xk2"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_horizontal_bar_height"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_folder"
            android:textColor="@color/z2"
            android:textSize="@dimen/my_text_size"
            android:layout_marginLeft="@dimen/my_margin_or_padding_border_width"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_folder_location"
            android:textColor="@color/z3"
            android:textSize="@dimen/my_text_size"
            android:layout_marginRight="@dimen/my_version_number_margin_border_width"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

